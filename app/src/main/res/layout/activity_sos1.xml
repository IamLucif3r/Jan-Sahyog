<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".sos1">

    <TextView
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="contact"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="77dp"
        android:layout_height="53dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_arrow_forward_black_24dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="73dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="25dp"
        android:onClick="sosContact"
        android:background="@drawable/ic_contact_phone_black_24dp"
        tools:ignore="OnClick" />
    />

    <TextView
        android:layout_width="162dp"
        android:layout_height="183dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/emergency"
        android:onClick="emergency_func"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ff0635"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="97dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/backs"
        android:onClick="sos_func"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <Button

        android:layout_width="148dp"
        android:layout_height="58dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#4B8A02"
        android:text="Go Back"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FDFBFB"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="For Emergency"
        android:textColor="#EF0707"
        android:textSize="25dp" />



</RelativeLayout>